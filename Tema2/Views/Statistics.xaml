        <TextBlock Name="txtBlock1" FontWeight="Bold" FontFamily="Trebuchet MS" Margin="84,81,503.6,36" FontSize="16" TextAlignment="Center" />
        <TextBlock Name="txtBlock2" FontWeight="Bold" FontFamily="Trebuchet MS" Margin="295,81,287.6,36" FontSize="16" TextAlignment="Center" />
        <TextBlock Name="txtBlock3" FontWeight="Bold" FontFamily="Trebuchet MS" Margin="511,81,58.6,36" FontSize="16" TextAlignment="Center" />
        <Button x:Name="view" Content="View Statistics" Click="Button_Click" Margin="238,149,251.6,161" FontSize="36" FontWeight="Bold" FontFamily="Trebuchet MS" Background="White" ></Button>
    </Grid>
</Window>
