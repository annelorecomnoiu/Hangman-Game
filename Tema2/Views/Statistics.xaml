        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema2.Views"
        mc:Ignorable="d"
        Title="Statistics" Height="450" Width="800" Top="190" Left="370">
    <Grid Background="#FFEEAD35">

        <TextBlock x:Name="txt1" Text="Username" Visibility="Hidden" FontWeight="Bold" FontFamily="Trebuchet MS" Margin="84,26,503.6,360" FontSize="20" TextAlignment="Center" />
        <TextBlock Name="txt2" Text="Number of games" Visibility="Hidden" FontWeight="Bold" FontFamily="Trebuchet MS" Margin="295,26,287.6,360" FontSize="20" TextAlignment="Center" />
